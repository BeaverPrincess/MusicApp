<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Status (Loaded: xxx / No music found / errors) -->
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status..."
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Play/Pause -->
    <Button
        android:id="@+id/btnPlayPause"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:enabled="false"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- QUEUE SECTION -->
    <TextView
        android:id="@+id/txtQueueTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Queue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPlayPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- For now, just a simple list container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQueue"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintTop_toBottomOf="@id/txtQueueTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LIBRARY SECTION -->
    <TextView
        android:id="@+id/txtLibraryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All songs (newest first)"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rvQueue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- This should take the remaining space and be scrollable -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLibrary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:overScrollMode="ifContentScrolls"
        app:layout_constraintTop_toBottomOf="@id/txtLibraryTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
